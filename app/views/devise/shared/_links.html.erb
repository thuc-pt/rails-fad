<% if controller_name != "sessions" %>
  <%= link_to t(".login"), new_session_path(resource_name),
    class: "btn btn-success btn-block btn-lg" %>
<% end %>
<% if devise_mapping.registerable? && controller_name != "registrations" %>
  <%= link_to t(".signup"), new_registration_path(resource_name),
    class: "btn btn-success btn-block btn-lg" %>
<% end %>
<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Login with #{OmniAuth::Utils.camelize provider}",
      omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-block btn-lg" %>
  <% end %>
<% end %>
<% if devise_mapping.recoverable? && controller_name != "passwords" &&
  controller_name != "registrations" %>
  <%= link_to t(".forgot"), new_password_path(resource_name),
    class: "btn btn-warning btn-block btn-lg" %>
<% end %>
<% if devise_mapping.confirmable? && controller_name != "confirmations" %>
  <%= link_to t(".confirmation"), new_confirmation_path(resource_name),
    class: "btn btn-info btn-block btn-lg" %>
<% end %>
<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) &&
  controller_name != "unlocks" %>
  <%= link_to t(".unlock"), new_unlock_path(resource_name),
    class: "btn btn-secondary btn-block btn-lg" %>
<% end %>
