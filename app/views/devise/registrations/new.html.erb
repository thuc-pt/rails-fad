<% provide :page, t(".page") %>
<div class="container">
  <br>
  <div class="row">
    <div class="col-md-4">
      <div class="div-form">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="div-form">
        <h1 class="text-center"><%= t(".page") %></h1>
        <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
          <%= render "share/errors", object: resource %>
          <div class="form-group">
            <%= f.label :email %><sup class="star">*</sup>
            <%= f.email_field :email, class: "form-control form-control-lg" %>
          </div>
          <div class="form-group">
            <%= f.label :password %><sup class="star">*</sup>
            <em>(<%= @minimum_password_length %> <%= t ".character" %>)</em>
            <%= f.password_field :password, class: "form-control form-control-lg" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %><sup class="star">*</sup>
            <%= f.password_field :password_confirmation, class: "form-control form-control-lg" %>
          </div>
          <div class="form-group">
            <%= f.label :name %><sup class="star">*</sup>
            <%= f.text_field :name, class: "form-control form-control-lg" %>
          </div>
          <div class="text-center">
            <%= f.submit t(".submit"), class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
