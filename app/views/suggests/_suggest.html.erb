<div class="col-lg-4 col-md-6">
  <div class="card">
    <div class="img-suggest">
      <%= link_to image_tag(suggest.image.url), suggest %>
    </div>
    <div class="content-suggest">
      <div>
        <h2><%= suggest.product_name %></h1>
      </div>
      <div>
        <p><%= suggest.description.truncate(Settings.truncate) %></p>
      </div>
    </div>
  </div>
</div>
