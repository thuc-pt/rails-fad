<br>
<div class="div-form-half">
  <h1 class="text-center"><%= yield :page %></h1>
  <%= form_for @suggest do |f| %>
    <%= render "share/errors", object: @suggest %>
    <div class="form-group">
      <%= f.text_field :product_name, placeholder: t(".name"),
        class: "form-control form-control-lg" %>
    </div>
    <div class="form-group"><%= f.file_field :image %></div>
    <div class="form-group">
      <%= f.cktext_area :description, placeholder: t(".description"),
        class: "form-control", rows: 5 %>
    </div>
    <div class="form-group text-center">
      <%= f.submit btn_name, class: "btn btn-lg btn-success" %>
    </div>
  <% end %>
</div>
